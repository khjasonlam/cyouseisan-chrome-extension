{
  "manifest_version": 3,
  "name": "調整さん拡張機能",
  "version": "2.0.0",
  "description": "調整さんでスケジュール作成を簡単にするChrome拡張機能",
  "permissions": ["activeTab", "tabs", "storage", "sidePanel"],
  "action": {
    "default_title": "調整さん拡張機能"
  },
  "side_panel": {
    "default_path": "html/sidebar.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chouseisan.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
