{
  "manifest_version": 3,
  "name": "調整さん拡張機能",
  "version": "1.0.0",
  "description": "調整さんでスケジュール作成を簡単にするChrome拡張機能",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "調整さん拡張機能"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chouseisan.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 